<div class="max-w-4xl mx-auto">
  <div class="mb-8 flex items-center justify-between">
    <div>
      <h1 class="text-5xl font-black text-black mb-3 tracking-tight"><%= @restaurant.name %></h1>
      <div class="flex items-center space-x-3">
        <% status_classes = {
          'pending' => 'bg-yellow-100 text-yellow-800 border-yellow-300',
          'approved' => 'bg-green-100 text-green-800 border-green-300',
          'suspended' => 'bg-red-100 text-red-800 border-red-300'
        } %>
        <span class="inline-block px-4 py-2 rounded-lg text-sm font-bold uppercase tracking-wide border-2 <%= status_classes[@restaurant.status] %>">
          <%= @restaurant.status %>
        </span>
        <span class="inline-block px-4 py-2 rounded-lg text-sm font-bold uppercase tracking-wide <%= @restaurant.plan == 'paid' ? 'bg-black text-white' : 'bg-gray-200 text-gray-700' %>">
          <%= @restaurant.plan %> Plan
        </span>
      </div>
    </div>
    <% if current_user == @restaurant.user || current_user.admin? %>
      <%= link_to "Edit", edit_restaurant_path(@restaurant), class: "bg-black text-white px-6 py-3 rounded-xl hover:bg-gray-900 transition-all duration-200 text-sm font-bold border-2 border-black shadow-[4px_4px_0_0_#000] hover:shadow-none hover:translate-x-[2px] hover:translate-y-[2px] uppercase tracking-wide" %>
    <% end %>
  </div>

  <div class="grid md:grid-cols-2 gap-6 mb-6">
    <div class="bg-white border-2 border-black rounded-2xl shadow-[6px_6px_0_0_#000] p-8">
      <h2 class="text-2xl font-black text-black mb-6 uppercase tracking-wide border-b-2 border-gray-200 pb-3">Restaurant Details</h2>
      <div class="space-y-5">
        <div>
          <p class="text-xs font-bold text-gray-600 uppercase tracking-wide mb-1">Restaurant Name</p>
          <p class="text-lg font-bold text-black"><%= @restaurant.name %></p>
        </div>
        <div>
          <p class="text-xs font-bold text-gray-600 uppercase tracking-wide mb-1">Owner Name</p>
          <p class="text-lg font-bold text-black"><%= @restaurant.owner_name %></p>
        </div>
        <div>
          <p class="text-xs font-bold text-gray-600 uppercase tracking-wide mb-1">Address</p>
          <p class="text-base text-black font-medium"><%= @restaurant.address %></p>
        </div>
      </div>
    </div>

    <div class="bg-white border-2 border-black rounded-2xl shadow-[6px_6px_0_0_#000] p-8">
      <h2 class="text-2xl font-black text-black mb-6 uppercase tracking-wide border-b-2 border-gray-200 pb-3">Contact Information</h2>
      <div class="space-y-5">
        <div>
          <p class="text-xs font-bold text-gray-600 uppercase tracking-wide mb-1">Email</p>
          <p class="text-base text-black font-medium"><%= @restaurant.email %></p>
        </div>
        <div>
          <p class="text-xs font-bold text-gray-600 uppercase tracking-wide mb-1">Phone</p>
          <p class="text-base text-black font-medium"><%= @restaurant.phone %></p>
        </div>
        <div>
          <p class="text-xs font-bold text-gray-600 uppercase tracking-wide mb-1">Account Email</p>
          <p class="text-base text-black font-medium"><%= @restaurant.user.email_address %></p>
        </div>
      </div>
    </div>
  </div>

  <% if @restaurant.pending? %>
    <div class="bg-yellow-50 border-2 border-yellow-300 rounded-xl p-6 mb-6">
      <div class="flex items-start">
        <svg class="w-6 h-6 text-yellow-600 mr-3 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
        </svg>
        <div>
          <h3 class="font-bold text-black mb-1">Pending Approval</h3>
          <p class="text-sm text-gray-700">Your restaurant registration is pending admin approval. You'll receive an email notification once it's been reviewed.</p>
        </div>
      </div>
    </div>
  <% elsif @restaurant.suspended? %>
    <div class="bg-red-50 border-2 border-red-300 rounded-xl p-6 mb-6">
      <div class="flex items-start">
        <svg class="w-6 h-6 text-red-600 mr-3 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <div>
          <h3 class="font-bold text-black mb-1">Restaurant Suspended</h3>
          <p class="text-sm text-gray-700">This restaurant account has been suspended. Please contact support for more information.</p>
        </div>
      </div>
    </div>
  <% end %>

  <div class="flex items-center space-x-4">
    <%= link_to "â† Back to Dashboard", dashboard_path, class: "text-black font-bold hover:underline transition-all text-sm uppercase tracking-wide" %>
    <% if current_user.admin? %>
      <%= link_to "View All Restaurants", restaurants_path, class: "text-black font-bold hover:underline transition-all text-sm uppercase tracking-wide" %>
    <% end %>
  </div>
</div>

