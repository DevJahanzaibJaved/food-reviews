<% if flash.any? %>
  <div class="fixed top-24 right-4 z-50 max-w-md animate-fade-in" id="flash-messages">
    <% if flash[:notice] %>
      <div class="bg-green-100 text-green-800 px-6 py-4 rounded-xl shadow-[4px_4px_0_0_#86efac] border-2 border-green-300 mb-3 flash-message" data-autohide="true">
        <div class="flex items-center justify-between">
          <p class="font-bold text-sm flex items-center">
            <span class="mr-2">✓</span>
            <%= flash[:notice] %>
          </p>
          <button class="flash-close ml-4 text-green-800 hover:text-green-900 font-bold text-lg leading-none transition-colors">×</button>
        </div>
      </div>
    <% end %>

    <% if flash[:alert] %>
      <div class="bg-red-100 text-red-800 px-6 py-4 rounded-xl shadow-[4px_4px_0_0_#fca5a5] border-2 border-red-300 flash-message" data-autohide="true">
        <div class="flex items-center justify-between">
          <p class="font-bold text-sm flex items-center">
            <span class="mr-2">⚠</span>
            <%= flash[:alert] %>
          </p>
          <button class="flash-close ml-4 text-red-800 hover:text-red-900 font-bold text-lg leading-none transition-colors">×</button>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
