<!-- Footer -->
<footer class="mt-32 pt-12 pb-8 border-t-2 border-gray-300">
  <div class="text-center">
    <div class="mb-6">
      <h3 class="text-2xl font-black text-black mb-2 tracking-tight">DineInsights</h3>
      <p class="text-sm text-gray-600 font-medium">Collect customer feedback via QR codes</p>
    </div>
    <div class="flex flex-wrap justify-center gap-6 mb-8">
      <% if authenticated? %>
        <%= link_to "Dashboard", dashboard_path, class: "text-black font-bold hover:underline transition-all text-sm uppercase tracking-wide" %>
      <% else %>
        <%= link_to "Sign In", new_session_path, class: "text-black font-bold hover:underline transition-all text-sm uppercase tracking-wide" %>
        <%= link_to "Sign Up", signup_path, class: "text-black font-bold hover:underline transition-all text-sm uppercase tracking-wide" %>
      <% end %>
    </div>
    <div class="text-xs text-gray-500 font-medium">
      <p>&copy; <%= Date.current.year %> DineInsights. All rights reserved.</p>
    </div>
  </div>
</footer>

