<div class="flex items-center justify-center h-[calc(100vh-8rem)] px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div class="text-center">
      <h1 class="text-5xl font-black text-black mb-3 tracking-tight">Update Password</h1>
      <p class="text-lg text-gray-600 font-medium">Enter your new password below</p>
    </div>

    <div class="bg-white border-2 border-black rounded-3xl shadow-[8px_8px_0_0_#000] p-10">
      <%= form_with url: password_path(params[:token]), method: :put, class: "space-y-6" do |form| %>
        <div data-controller="password-visibility">
          <%= form.label :password, "New Password", class: "block text-sm font-bold text-black mb-2.5 uppercase tracking-wide" %>
          <div class="relative">
            <%= form.password_field :password, 
                required: true, 
                autocomplete: "new-password", 
                placeholder: "Enter a strong password",
                maxlength: 72,
                autofocus: true,
                data: { password_visibility_target: "input" },
                class: "w-full px-5 py-4 pr-12 border-2 border-gray-300 rounded-xl focus:outline-none focus:ring-4 focus:ring-black/10 focus:border-black transition-all text-black placeholder-gray-400 font-medium text-base hover:border-gray-400" %>
            <button type="button" 
                    data-password-visibility-target="toggle"
                    data-action="click->password-visibility#toggle"
                    class="absolute right-4 top-1/2 -translate-y-1/2 text-gray-500 hover:text-black transition-colors focus:outline-none"
                    aria-label="Show password">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
              </svg>
            </button>
          </div>
        </div>

        <div data-controller="password-visibility">
          <%= form.label :password_confirmation, "Confirm New Password", class: "block text-sm font-bold text-black mb-2.5 uppercase tracking-wide" %>
          <div class="relative">
            <%= form.password_field :password_confirmation, 
                required: true, 
                autocomplete: "new-password", 
                placeholder: "Re-enter your password",
                maxlength: 72,
                data: { password_visibility_target: "input" },
                class: "w-full px-5 py-4 pr-12 border-2 border-gray-300 rounded-xl focus:outline-none focus:ring-4 focus:ring-black/10 focus:border-black transition-all text-black placeholder-gray-400 font-medium text-base hover:border-gray-400" %>
            <button type="button" 
                    data-password-visibility-target="toggle"
                    data-action="click->password-visibility#toggle"
                    class="absolute right-4 top-1/2 -translate-y-1/2 text-gray-500 hover:text-black transition-colors focus:outline-none"
                    aria-label="Show password">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
              </svg>
            </button>
          </div>
        </div>
        
        <div class="mt-2.5">
          <%= render "shared/password_requirements" %>
        </div>

        <div class="pt-2">
          <%= form.submit "Update Password", class: "w-full bg-black text-white font-bold py-4 px-6 rounded-xl hover:bg-gray-900 transition-all duration-200 cursor-pointer border-2 border-black shadow-[4px_4px_0_0_#000] hover:shadow-[2px_2px_0_0_#000] hover:translate-x-[2px] hover:translate-y-[2px] active:shadow-none active:translate-x-1 active:translate-y-1 text-lg uppercase tracking-wider" %>
        </div>
      <% end %>
    </div>

    <div class="text-center">
      <%= link_to "â† Back to Sign In", new_session_path, class: "text-sm font-semibold text-gray-600 hover:text-black transition-colors underline decoration-2 underline-offset-4 hover:decoration-black" %>
    </div>
  </div>
</div>
