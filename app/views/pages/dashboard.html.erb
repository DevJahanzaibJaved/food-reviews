<div class="max-w-7xl mx-auto">
  <div class="mb-12">
    <h1 class="text-6xl font-black text-black mb-4 tracking-tight">Dashboard</h1>
    <p class="text-xl text-gray-600 font-medium">Welcome back, <span class="font-bold text-black"><%= current_user.email_address %></span>!</p>
  </div>

  <% if current_user.admin? %>
    <!-- Admin Dashboard -->
    <div class="grid md:grid-cols-2 gap-8 mb-8">
      <div class="bg-white border-2 border-black rounded-2xl shadow-[6px_6px_0_0_#000] p-8">
        <h2 class="text-2xl font-black text-black mb-6 uppercase tracking-wide">Admin Panel</h2>
        <div class="space-y-4">
          <div class="flex items-center justify-between py-3 border-b border-gray-200">
            <span class="text-gray-600 font-semibold uppercase text-sm tracking-wide">Role:</span>
            <span class="bg-black text-white px-4 py-1.5 rounded-lg font-bold text-sm uppercase tracking-wide">
              <%= current_user.role.humanize %>
            </span>
          </div>
          <div class="pt-4 space-y-3">
            <%= link_to "Manage Restaurants", restaurants_path, class: "block w-full bg-black text-white px-6 py-3.5 rounded-xl hover:bg-gray-900 transition-all duration-200 text-center text-sm font-bold border-2 border-black shadow-[4px_4px_0_0_#000] hover:shadow-none hover:translate-x-[2px] hover:translate-y-[2px] uppercase tracking-wide" %>
            <%= link_to "Add New Restaurant", new_restaurant_path, class: "block w-full bg-white text-black px-6 py-3.5 rounded-xl hover:bg-gray-50 transition-all duration-200 text-center text-sm font-bold border-2 border-black shadow-[4px_4px_0_0_#000] hover:shadow-none hover:translate-x-[2px] hover:translate-y-[2px] uppercase tracking-wide" %>
          </div>
        </div>
      </div>

      <div class="bg-white border-2 border-black rounded-2xl shadow-[6px_6px_0_0_#000] p-8">
        <h2 class="text-2xl font-black text-black mb-6 uppercase tracking-wide">Platform Stats</h2>
        <div class="space-y-4">
          <div class="p-5 bg-gray-50 border-2 border-gray-200 rounded-xl">
            <p class="text-gray-600 font-medium">Total Restaurants: <span class="font-bold text-black"><%= Restaurant.count %></span></p>
            <p class="text-gray-600 font-medium mt-2">Pending Approval: <span class="font-bold text-yellow-600"><%= Restaurant.pending.count %></span></p>
            <p class="text-gray-600 font-medium mt-2">Approved: <span class="font-bold text-green-600"><%= Restaurant.approved.count %></span></p>
          </div>
        </div>
      </div>
    </div>

  <% elsif current_user.restaurant_owner? %>
    <!-- Restaurant Owner Dashboard -->
    <% if current_user.restaurant.present? %>
      <% restaurant = current_user.restaurant %>
      <div class="grid md:grid-cols-2 gap-8 mb-8">
        <div class="bg-white border-2 border-black rounded-2xl shadow-[6px_6px_0_0_#000] p-8">
          <h2 class="text-2xl font-black text-black mb-6 uppercase tracking-wide">Your Restaurant</h2>
          <div class="space-y-4">
            <div>
              <p class="text-xs font-bold text-gray-600 uppercase tracking-wide mb-1">Restaurant Name</p>
              <p class="text-xl font-black text-black mb-4"><%= restaurant.name %></p>
            </div>
            <div class="flex items-center space-x-3 mb-4">
              <% status_classes = {
                'pending' => 'bg-yellow-100 text-yellow-800 border-yellow-300',
                'approved' => 'bg-green-100 text-green-800 border-green-300',
                'suspended' => 'bg-red-100 text-red-800 border-red-300'
              } %>
              <span class="inline-block px-4 py-2 rounded-lg text-xs font-bold uppercase tracking-wide border-2 <%= status_classes[restaurant.status] %>">
                <%= restaurant.status %>
              </span>
              <span class="inline-block px-4 py-2 rounded-lg text-xs font-bold uppercase tracking-wide <%= restaurant.plan == 'paid' ? 'bg-black text-white' : 'bg-gray-200 text-gray-700' %>">
                <%= restaurant.plan %> Plan
              </span>
            </div>
            <div class="pt-4 space-y-3 border-t-2 border-gray-200">
              <%= link_to "View Restaurant Details", restaurant_path(restaurant), class: "block w-full bg-black text-white px-6 py-3.5 rounded-xl hover:bg-gray-900 transition-all duration-200 text-center text-sm font-bold border-2 border-black shadow-[4px_4px_0_0_#000] hover:shadow-none hover:translate-x-[2px] hover:translate-y-[2px] uppercase tracking-wide" %>
              <%= link_to "Edit Restaurant", edit_restaurant_path(restaurant), class: "block w-full bg-white text-black px-6 py-3.5 rounded-xl hover:bg-gray-50 transition-all duration-200 text-center text-sm font-bold border-2 border-black shadow-[4px_4px_0_0_#000] hover:shadow-none hover:translate-x-[2px] hover:translate-y-[2px] uppercase tracking-wide" %>
            </div>
          </div>
        </div>

        <div class="bg-white border-2 border-black rounded-2xl shadow-[6px_6px_0_0_#000] p-8">
          <h2 class="text-2xl font-black text-black mb-6 uppercase tracking-wide">Quick Info</h2>
          <div class="space-y-4">
            <div class="flex items-center justify-between py-3 border-b border-gray-200">
              <span class="text-gray-600 font-semibold uppercase text-sm tracking-wide">Email:</span>
              <span class="text-black font-bold text-sm"><%= restaurant.email %></span>
            </div>
            <div class="flex items-center justify-between py-3 border-b border-gray-200">
              <span class="text-gray-600 font-semibold uppercase text-sm tracking-wide">Phone:</span>
              <span class="text-black font-bold text-sm"><%= restaurant.phone %></span>
            </div>
            <div class="py-3">
              <p class="text-gray-600 font-semibold uppercase text-sm tracking-wide mb-2">Address:</p>
              <p class="text-black font-medium text-sm"><%= restaurant.address %></p>
            </div>
          </div>
        </div>
      </div>

      <% if restaurant.pending? %>
        <div class="bg-yellow-50 border-2 border-yellow-300 rounded-xl p-6 mb-8">
          <div class="flex items-start">
            <svg class="w-6 h-6 text-yellow-600 mr-3 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
            </svg>
            <div>
              <h3 class="font-bold text-black mb-1">Restaurant Pending Approval</h3>
              <p class="text-sm text-gray-700">Your restaurant registration is currently being reviewed by our admin team. You'll receive an email notification once it's been approved.</p>
            </div>
          </div>
        </div>
      <% end %>

    <% else %>
      <!-- No Restaurant Registered -->
      <div class="grid md:grid-cols-2 gap-8">
        <div class="bg-white border-2 border-black rounded-2xl shadow-[6px_6px_0_0_#000] p-8">
          <h2 class="text-2xl font-black text-black mb-6 uppercase tracking-wide">Your Account</h2>
          <div class="space-y-4">
            <div class="flex items-center justify-between py-3 border-b border-gray-200">
              <span class="text-gray-600 font-semibold uppercase text-sm tracking-wide">Email:</span>
              <span class="text-black font-bold"><%= current_user.email_address %></span>
            </div>
            <div class="flex items-center justify-between py-3 border-b border-gray-200">
              <span class="text-gray-600 font-semibold uppercase text-sm tracking-wide">Role:</span>
              <span class="bg-black text-white px-4 py-1.5 rounded-lg font-bold text-sm uppercase tracking-wide">
                <%= current_user.role.humanize %>
              </span>
            </div>
          </div>
        </div>

        <div class="bg-white border-2 border-black rounded-2xl shadow-[6px_6px_0_0_#000] p-8">
          <h2 class="text-2xl font-black text-black mb-6 uppercase tracking-wide">Get Started</h2>
          <div class="space-y-4">
            <div class="p-5 bg-gray-50 border-2 border-gray-200 rounded-xl mb-4">
              <p class="text-gray-600 font-medium mb-2">You haven't registered a restaurant yet.</p>
              <p class="text-sm text-gray-500">Register your restaurant to start collecting customer feedback via QR codes.</p>
            </div>
            <div class="pt-4">
              <%= link_to "Register Your Restaurant", new_restaurant_path, class: "block w-full bg-black text-white px-6 py-3.5 rounded-xl hover:bg-gray-900 transition-all duration-200 text-center text-sm font-bold border-2 border-black shadow-[4px_4px_0_0_#000] hover:shadow-none hover:translate-x-[2px] hover:translate-y-[2px] uppercase tracking-wide" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
