<div class="flex items-center justify-center h-[calc(100vh-8rem)] px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div class="text-center">
      <h1 class="text-5xl font-black text-black mb-3 tracking-tight">Create Account</h1>
      <p class="text-lg text-gray-600 font-medium">Join us and get started</p>
    </div>

    <div class="bg-white border-2 border-black rounded-3xl shadow-[8px_8px_0_0_#000] p-10">
      <%= form_with model: @user, url: signup_path, class: "space-y-6" do |form| %>
        <% if @user.errors.any? %>
          <div class="mb-6 bg-red-100 text-red-800 px-5 py-4 rounded-xl border-2 border-red-300">
            <p class="font-bold text-sm mb-3 uppercase tracking-wide">Please fix the following errors:</p>
            <ul class="text-sm space-y-1.5">
              <% @user.errors.full_messages.each do |message| %>
                <li class="flex items-start">
                  <span class="mr-2">â€¢</span>
                  <span><%= message %></span>
                </li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div>
          <%= form.label :email_address, "Email Address", class: "block text-sm font-bold text-black mb-2.5 uppercase tracking-wide" %>
          <%= form.email_field :email_address,
              placeholder: "you@example.com",
              required: true,
              autofocus: true,
              class: "w-full px-5 py-4 border-2 border-gray-300 rounded-xl focus:outline-none focus:ring-4 focus:ring-black/10 focus:border-black transition-all text-black placeholder-gray-400 font-medium text-base hover:border-gray-400" %>
        </div>

        <div data-controller="password-visibility">
          <%= form.label :password, "Password", class: "block text-sm font-bold text-black mb-2.5 uppercase tracking-wide" %>
          <div class="relative">
            <%= form.password_field :password,
                placeholder: "Enter a strong password",
                required: true,
                data: { password_visibility_target: "input" },
                class: "w-full px-5 py-4 pr-12 border-2 border-gray-300 rounded-xl focus:outline-none focus:ring-4 focus:ring-black/10 focus:border-black transition-all text-black placeholder-gray-400 font-medium text-base hover:border-gray-400" %>
            <button type="button" 
                    data-password-visibility-target="toggle"
                    data-action="click->password-visibility#toggle"
                    class="absolute right-4 top-1/2 -translate-y-1/2 text-gray-500 hover:text-black transition-colors focus:outline-none"
                    aria-label="Show password">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
              </svg>
            </button>
          </div>
        </div>

        <div data-controller="password-visibility">
          <%= form.label :password_confirmation, "Confirm Password", class: "block text-sm font-bold text-black mb-2.5 uppercase tracking-wide" %>
          <div class="relative">
            <%= form.password_field :password_confirmation,
                placeholder: "Re-enter your password",
                required: true,
                data: { password_visibility_target: "input" },
                class: "w-full px-5 py-4 pr-12 border-2 border-gray-300 rounded-xl focus:outline-none focus:ring-4 focus:ring-black/10 focus:border-black transition-all text-black placeholder-gray-400 font-medium text-base hover:border-gray-400" %>
            <button type="button" 
                    data-password-visibility-target="toggle"
                    data-action="click->password-visibility#toggle"
                    class="absolute right-4 top-1/2 -translate-y-1/2 text-gray-500 hover:text-black transition-colors focus:outline-none"
                    aria-label="Show password">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
              </svg>
            </button>
          </div>
        </div>
        <div class="mt-2.5">
          <%= render "shared/password_requirements" %>
        </div>

        <div class="pt-2">
          <%= form.submit "Create Account", class: "w-full bg-black text-white font-bold py-4 px-6 rounded-xl hover:bg-gray-900 transition-all duration-200 cursor-pointer border-2 border-black shadow-[4px_4px_0_0_#000] hover:shadow-[2px_2px_0_0_#000] hover:translate-x-[2px] hover:translate-y-[2px] active:shadow-none active:translate-x-1 active:translate-y-1 text-lg uppercase tracking-wider" %>
        </div>
      <% end %>
    </div>

    <div class="text-center">
      <p class="text-gray-600 text-sm font-medium">
        Already have an account?
        <%= link_to "Sign in", new_session_path, class: "font-bold text-black hover:underline transition-all ml-1" %>
      </p>
    </div>
  </div>
</div>
